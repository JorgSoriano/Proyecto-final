<div class="container" style="margin:100px auto">
    <div class="row">
        <div class="col-6 offset-3">
            <h4>Agregar una nueva promoción</h4>
            <form action="/admin/promociones/agregar" method="post" enctype="multipart/form-data">
                <div class="mb-3 row">
                    <input type="text" class="form-control" placeholder="Promoción" name="promocion">
                </div>
                <div class="mb-3 row">
                    <input type="text" class="form-control" placeholder="Descripción" name="descripcion">
                </div>
                <div class="mb-3 row">
                    <input type="date" class="form-control" placeholder="Inicio" name="inicio">
                </div>
                <div class="mb-3 row">
                    <input type="date" class="form-control" placeholder="Fin" name="fin">
                </div>
                <div class="mb-3 row">
                    <label for="">Imagen: <input type="file" class="form-control" name="imagen" id="imagen" /> </label>
                </div>
                <button type="submit" class="btn btn-primary">Guardar</button>
            </form>
            {{#if error}}
            <h5>
                {{message}}
            </h5>
            {{/if}}

        </div>
    </div>

</div>